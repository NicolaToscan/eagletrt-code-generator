{
  "name": "eagletrt-code-generator",
  "version": "1.0.12",
  "description": "Generate dinamically code for the eagletrt telemetry",
  "main": "dist/lib/index.js",
  "bin": {
    "eagle": "dist/bin/index.js"
  },
  "scripts": {
    "transpile": "tsc --project source",
    "lint": "eslint source/**/*.ts",
    "lint:fix": "eslint --fix source/**/*.ts",
    "docs:html": "typedoc --mode library --inputFiles source/lib/index.ts --excludeExternals --excludeNotExported --includeVersion --tsconfig source/tsconfig.json --out docs/documentation/html",
    "docs:html-dev": "typedoc --mode module --includeVersion --tsconfig source/tsconfig.json --out docs/documentation/html-dev",
    "docs:deploy:html": "now docs/documentation/html --name eagletrt-code-generator --confirm --prod --token $NOW_TOKEN",
    "docs:deploy:html-dev": "now docs/documentation/html-dev --name eagletrt-code-generator-dev --confirm --prod --token $NOW_TOKEN",
    "docs:deploy": "npm run docs:deploy:html && npm run docs:deploy:html-dev",
    "docs:tree": "dree parse . --dest docs/directory-tree --name tree --options docs/directory-tree/dree.json",
    "docs": "npm run docs:html && npm run docs:html-dev && npm run docs:deploy",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/euberdeveloper/eagletrt-code-generator.git"
  },
  "author": "Eugenio Vinicio Berretta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/euberdeveloper/eagletrt-code-generator/issues"
  },
  "keywords": [
    "eagletrt",
    "transpiler",
    "code-generator",
    "c-generator"
  ],
  "homepage": "https://github.com/euberdeveloper/eagletrt-code-generator#readme",
  "devDependencies": {
    "@types/node": "^13.9.3",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "now": "^17.1.1",
    "typedoc": "^0.17.0-3",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "dree": "^2.4.14",
    "yargs": "^15.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
